---
import Input from "../../../Frontend/src/components/input.astro";
import Botones from "../../../Frontend/src/components/botones.astro";
import Respon from "../../../Frontend/src/components/respon.astro";
---

<!doctype html>
<html lang="es">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>Inicio Sesión</title>
  <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet" />
  <script defer src="../js/inicio.js"></script>
</head>

<body>
  <div class="flex flex-col items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
      <div class="mb-4">
        <img src="../img/img_login.jpeg" alt="Illustration of a person working on a laptop with analytics charts and money symbols" class="w-full h-35 object-cover rounded-lg" />
      </div>
      <h2 class="mb-6 text-2xl font-bold text-center">Iniciar Sesión</h2>
      <form id="loginForm" class="space-y-6">
        <!-- Correo -->
        <div id="usuarioDiv">
          <label for="usuario" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
          <input
            id="usuario"
            type="email"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1 bg-gray-200"
            placeholder="Ingrese su correo electrónico"
            required
          />
          <p id="usuarioError" class="text-red-500 text-sm hidden">Ingrese un correo electrónico válido</p>
        </div>

        <!-- Contraseña -->
        <div id="contrasenaDiv">
          <label for="contrasena" class="block text-sm font-medium text-gray-700">Contraseña</label>
          <input
            id="contrasena"
            type="password"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1 bg-gray-200"
            placeholder="Ingrese su contraseña"
            required
          />
          <p id="contrasenaError" class="text-red-500 text-sm hidden">La contraseña debe tener al menos 8 caracteres</p>
          <p id="loginError" class="text-red-500 text-sm hidden">La contraseña es incorrecta</p>
        </div>

        <!-- Botón de Iniciar Sesión -->
        <div id="botonDiv">
          <button type="submit" class="w-full px-4 py-2 text-white bg-green-500 rounded-md hover:bg-green-600 focus:outline-none focus:ring-green-500 focus:ring-1">Iniciar Sesión</button>
        </div>

        <!-- Crear Cuenta -->
        <div id="crearCuentaDiv" class="text-center">
          <a href="inscribirte" class="text-sm text-green-600 hover:text-green-700">Crear Cuenta</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
