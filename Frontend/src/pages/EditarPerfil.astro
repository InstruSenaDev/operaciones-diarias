<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libro de Operaciones</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  </head>

<div class="flex items-center justify-center h-screen">
    <div class="profile" @click="toggleModal">
      <img src="../../public/img/icono_perfil.png" alt="Perfil de usuario" class="rounded-full h-16 w-16 cursor-pointer">
      <p class="text-center text-lg mt-2">Alexander</p>
    </div>
  </div>
  
  <!-- Modal -->
  <div id="profileModal" class="hidden fixed inset-0 bg-gray-100 bg-opacity-75 flex justify-center items-center">
    <div class="bg-white rounded-lg p-8 shadow-lg">
      <h2 class="text-xl font-bold mb-4">Editar Perfil</h2>
      <form class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium">Nombre</label>
          <input type="text" id="name" class="w-full border rounded p-2" placeholder="Alexander" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium">Correo electrónico</label>
          <input type="email" id="email" class="w-full border rounded p-2" placeholder="alexander@mail.com" />
        </div>
        <div>
          <label for="password" class="block text-sm font-medium">Contraseña</label>
          <input type="password" id="password" class="w-full border rounded p-2" />
        </div>
        <div class="flex justify-end">
          <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded" @click="toggleModal">Cancelar</button>
          <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded ml-2">Guardar</button>
        </div>
      </form>
    </div>
  </div>
  <script>
    const toggleModal = () => {
      const modal = document.getElementById('profileModal');
      modal.classList.toggle('hidden');
    };
  
    document.querySelector('.profile').addEventListener('click', toggleModal);
    document.querySelectorAll('.toggle-modal').forEach(button => {
      button.addEventListener('click', toggleModal);
    });
  </script>
  
  