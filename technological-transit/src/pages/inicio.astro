---
import Input from "../components/input.astro";
import Botones from "../components/botones.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Inicio Sesión</title>
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>

  <body
    <div
    class="flex flex-col items-center justify-center min-h-screen bg-white "
  >
    <div
      class="flex flex-col jusstify-center items center w-screen "
    >
      <div class="grid grid-cols-2 gap-3 px-96">
        <div>
          <img
            src="../img/img_login.jpeg"
           
            alt="Illustration of a person working on a laptop with analytics charts and money symbols"
            class="w-25 h-25 object-cover"
          />
        </div>
        <form class=" form flex flex-col justify-center gap-4">
          <form class=" form flex flex-col justify-center gap-10">
            <div class="form-container bg-white p-20 rounded-lg shadow-lg" class="w-96"> 
         </form>
         <div class="justify-center item-center"><h2 class="mb-4 text-2xl font-bold text-center">Iniciar Sesión</h2></div> 
          
            <div class="mb-4">
              <label for="usuario" class="block mb-2 text-sm font-medium">
                
              </label>
              <input
                id="usuario"
                type="text"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1 bg-gray-200"
                placeholder="Ingrese su usuario"
              />
            </div>
            <div class="mb-4">
              <label for="contrasena" class="block mb-2 text-sm font-medium">
               
              </label>
              <input
                id="contrasena"
                type="password"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1  bg-gray-200"
                placeholder="Ingrese su contraseña"
              />
            </div>
            <div class="flex flex-box w-full gap-4  ">
              <input id="recordar" class="flex items-start" type="checkbox" />
              <label for="recordar" class="text-sm font-medium">
                Recordar Contraseña 
              </label>
              <u> <a href="recuperar" class="text-sm text-black-600 hover:text-black-700">
                Olvidaste tu contraseña?
              </a></u>
            </div>
            <div class="flex flex-col items-center justify-center">
              <a href="home"><button 
            type="submit"
            class="px-2 py-2 text-white bg-green-500 rounded-md hover:bg-green-600 focus:outline-none focus:ring-green-500 focus:ring-1 w-44 items-center">
            Iniciar Sesión
          </button></a>

<div class="text-sm text-black-600 hover:text-black-700">
  <a href="registro">
              Crear Cuenta
            </a>
</div>
             



             </div>
          



          </form>
          
          
            
          
        </div>
      </div>
    </div>
  </body>
</html>
