---
import Input from "../components/input.astro";
import Botones from "../components/botones.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Registro</title>
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>

  <body
    <div
    class="flex flex-col items-center justify-center min-h-screen bg-gray-100"
  >
  
    <div
      class="flex flex-col jusstify-center items center w-screen "
    >
      <div class="grid grid-cols-2 gap-3 px-96">
        <div>
          <img
            src="../img/img_registro.png"
           
            alt="Illustration of a person working on a laptop with analytics charts and money symbols"
            class="w-96 h-auto object-cover"
          />
        </div>
        <form class=" form flex flex-col justify-center gap-4">
          <div class="form-container bg-white p-8 rounded-lg shadow-lg w-96">
         
         <div class="justify-center item-center"><h2 class="mb-4 text-2xl font-bold text-center">Inscribirte</h2></div> 
         <div class="mb-4">
          <label for="Nombre" class="block mb-2 text-sm font-medium">
            
          </label>
          <input
            id="Nombre"
            type="text"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1"
            placeholder="Nombres Completos"
          />
        </div>
            <div class="mb-4">
              <label for="usuario" class="block mb-2 text-sm font-medium">
                
              </label>
              <input
                id="usuario"
                type="text"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1"
                placeholder="Ingrese su usuario"
              />
            </div>
            <div class="mb-4">
              <label for="contrasena" class="block mb-2 text-sm font-medium">
               
              </label>
              <input
                id="contrasena"
                type="password"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-green-500 focus:ring-1"
                placeholder="Ingrese su contraseña"
              />
            </div>
            <div class="flex flex-col items-center w-full gap-10  ">
              <input id="recordar" class="mr-2" type="checkbox" />
              <label for="recordar" class="text-sm font-medium">
                Terminos y Condiciones 
              </label>
              <button 
              type="submit"
              class="px-4 py-2 text-white bg-green-500 rounded-md hover:bg-green-600 focus:outline-none focus:ring-green-500 focus:ring-1 w-40 items-center"
            >
              Registrase
            </button>

            <a href="../pages/Inscribirte.astro" class="text-sm text-gray-500 hover:text-gray-700">
              Iniciar Sesión
            </a>
            </div>
          



          </form>
          
          
            
          
        </div>
      </div>
    </div>
  </body>
</html>
